{
  "name": "@swrve/web-sdk",
  "version": "1.1.0",
  "author": "Swrve Inc.",
  "license": "Apache-2.0",
  "main": "dist/SwrveSDK.js",
  "types": "dist/types/index.d.ts",
  "readme": "../README.md",
  "keywords": [
    "swrve",
    "sdk",
    "web",
    "browser",
    "js",
    "chrome",
    "firefox",
    "safari",
    "engagement",
    "marketing",
    "platform"
  ],
  "scripts": {
    "bundle": "yarn run bundle:prod",
    "bundle:dev": "webpack --config webpack.config.js --progress --profile --color --watch --mode=production",
    "bundle:prod": "NODE_ENV=production webpack --config webpack.config.js --progress --color --mode=development",
    "bundle:release": "yarn run bundle:prod && yarn run types",
    "clean": "yarn cache clean && rm -rf ./dist",
    "prepublish": "yarn bundle:release",
    "types": "tsc --declaration --declarationDir dist/types"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.19",
    "ts-loader": "^4.5.0",
    "ts-md5": "^1.2.4",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "typedoc": "^0.12.0",
    "typedoc-webpack-plugin": "^1.1.4",
    "typescript": "^3.0.3",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0"
  }
}
